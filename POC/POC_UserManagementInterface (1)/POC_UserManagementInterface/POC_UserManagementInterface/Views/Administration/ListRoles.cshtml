
@using Microsoft.AspNetCore.Identity;

@inject RoleManager<IdentityRole> _roleManager
@inject UserManager<POC_UserManagementInterface.Areas.Identity.Data.ApplicationInterfaceUser> _usermanager
@model IEnumerable<IdentityRole>

@{
    ViewBag.Title = "All Roles";

}
@if (User.IsInRole("Admin"))
{
   

    <div class="row">
        <div class="col-md-6 offset-md-3">
            
            <div class="card card-columns">
                <div class="card-header">
                    <h3 class="card-title text-warning">User Role List</h3>
                </div>
                <a class="btn btn-info btn-block" style="width:auto" asp-action="CreateRole"
                   asp-controller="administration">Add New Role</a>
                <div class="card-body p-0">
                    <table class="table table-striped projects table-hover">
                        <thead>
                            <tr>
                                @*<th style="width: 1%">
                            #
                        </th>*@

                                <th style="width: 60%">
                                    User Role
                                </th>
                                <th style="width: 40%">

                                </th>
                            </tr>
                        </thead>
                        @foreach (var role in Model)
                        {
                            <tbody>
                                <tr>
                                    @*<td>
                                #
                            </td>*@
                                    <td>
                                        <a>@role.Name</a>
                                    </td>

                                    <td class="project-actions text-right">
                                        <a asp-controller="Administration" asp-action="EditRole"
                                           asp-route-id="@role.Id" class="btn btn-info btn-sm">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Edit
                                        </a>
                                    </td>
                                    <td>
                                        <form method="post" asp-action="DeleteRole" asp-route-id="@role.Id">
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure want to delete role: @role.Name')">Delete</button>
                                        </form>
                                    </td>
                                </tr>


                            </tbody>


                        }
                    </table>
                </div>

            </div>
        </div>
    </div>
}
else
{
    

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card card-columns">
                <div class="card-header">
                    <h3 class="card-title text-warning">User Role List</h3>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                @*<th style="width: 1%">
                                        #
                                    </th>*@

                                <th style="width: 60%">
                                    User Role
                                </th>
                                
                            </tr>
                        </thead>
                        @foreach (var role in Model)
                        {
                            <tbody>
                                <tr>
                                    @*<td>
                                            #
                                        </td>*@
                                    <td>
                                        <a>@role.Name</a>
                                    </td>

                                 
                                    
                                </tr>


                            </tbody>


                        }
                    </table>
                </div>

            </div>
        </div>
    </div>
}

